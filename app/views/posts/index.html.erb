

<% flash.each do |key, value|%>
  <p class='successes_mes'><%= value %></p>
<%end%>

<div class="posts-container">
  <% @posts.each do |post| %>
    <div class="post">
      <div class="post_header">
        <div>
          <%= link_to post do %>
            <h3 class='title index_title'> <%= post.title %> </h3>
          <% end %>
        </div>
        
      </div>
      <div class='image'>
        <%= image_tag(post.image) %>
      </div>
      <p class='body'> <%= post.body %> </p>
      <p class='date'> <%= post.created_at %> </p>

   
  
      
    </div>
   
  <% end %>
</div>

<%= will_paginate @posts %>
